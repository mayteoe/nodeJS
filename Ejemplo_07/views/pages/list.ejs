<%- include('../partials/header.ejs'); %>

    <div class="container">
        <div class="row">
            <div class="col-xs-12">


                <%if ( typeof(_message) !="undefined" ) { %>
                    <div class="alert alert-success">
                        <%= _message %>
                    </div>
                    <% } %>
                        <h1>List</h1>
            </div>


            <div class="col-xs-12">
                <table class="table table-stripped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% clientes.forEach(function(cliente) { %>
                            <tr>
                                <td>#<%= cliente.Id %>
                                </td>
                                <td>
                                    <%= cliente.Nombre %>
                                </td>
                                <td>
                                    <%= cliente.Email %>
                                </td>
                                <td>
                                    <a href="/edit/<%= cliente.Id %>" class="btn btn-primary">Edit</a>
                                    <a href="/delete/<%= cliente.Id %>" class="btn btn-danger btnDelete">Delete</a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <script type="text/javascript">
        var el = document.getElementsByClassName("btnDelete");

        for (i = 0; i < el.length; i++) {
            el[i].addEventListener("click", function (e) {
                if (confirm('Â¿Deseas borrar el cliente?') == false) {
                    e.preventDefault();
                };

            });
        }
    </script>

    <%- include('../partials/footer.ejs'); %>