extends layout

block content
    h1= title
    form(name="add-estimation", method="post")
        input(type="hidden", name="id", value="#{value.id}")
        div.input
            span.label Name
            input(type="text", name="name", value="#{value.name}")
        div.input
            span.label Email
            input(type="email", name="email", value="#{value.email}")
        div.actions
            input(type="submit", value="Save")
    
