<%- include('../partials/header') %>

    <div class="container">
        <div class="row">
            <div class="col-xs-12">

                <h1>
                    <%= title %>
                </h1>

                <table class="table table-hover table-stripped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% values.forEach(function(value){ %>
                            <tr>
                                <td>
                                    <%= value.id %>
                                </td>
                                <td>
                                    <%= value.name %>
                                </td>
                                <td>
                                    <%= value.email %>
                                </td>
                                <td>
                                    <a href='/update/<%= value.id %>' class='btn btn-default'>Edit</a>
                                    <a href='/delete/<%= value.id %>' class='btn btn-default'>Delete</a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
                <ul>

                </ul>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>