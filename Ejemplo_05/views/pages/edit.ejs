<%- include('../partials/header') %>

    <div class="container">
        <div class="row">
            <div class="col-xs-12">

                <h1>
                    <%= title %>
                </h1>

                <form name="" method="post" action="/update/<%= value.id %>">
                    <input type="hidden" name="id" value="<%= value.id %>">
                    <div class="row">
                        <div class="col-xs-12">
                            <label>Name</label>
                            <input type="text" class="form-control" name="name" value="<%= value.name %>" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <label>Email</label>
                            <input type="email" class="form-control" name="email" value="<%= value.email %>" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>